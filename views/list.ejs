<%-include("header")-%>
<div class="box" id="heading">
	<h1><%=listTitle%></h1>
</div>
<div class="box">
	<% newListItems.forEach(function(item){ %>
	<form action="/delete" method="POST">
		<div class="item">
			<input type="checkbox" />
			<p><%= item.name %></p>
		</div>
	</form>
	<% }) %>

	<form class="item" action="/" method="POST">
		<input
			type="text"
			name="newItem"
			placeholder="New Item"
			autocomplete="off"
		/>
		<button class="btn" type="submit" name="list">+</button>
	</form>
</div>
<%-include("footer")-%>
